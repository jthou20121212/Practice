<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/iv_deep_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:src="@drawable/pro_hexagon"
        android:translationX="30dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_company"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_deep_case_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:text="3篇"
        android:textColor="#ffd2bb99"
        android:textSize="14sp"
        android:translationX="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_deep_case"
        app:layout_constraintEnd_toEndOf="@+id/iv_deep_case"
        app:layout_constraintStart_toStartOf="@+id/iv_deep_case" />

    <TextView
        android:id="@+id/tv_deep_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="深案例"
        android:textColor="#ffcfb690"
        android:textSize="14sp"
        android:translationX="30dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_deep_case"
        app:layout_constraintStart_toStartOf="@+id/iv_deep_case"
        app:layout_constraintTop_toTopOf="@+id/iv_deep_case" />

    <ImageView
        android:id="@+id/iv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:src="@drawable/pro_hexagon"
        app:layout_constraintEnd_toStartOf="@+id/iv_column"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/iv_deep_case"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_company_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:text="3个"
        android:textColor="#ffd2bb99"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_company"
        app:layout_constraintEnd_toEndOf="@+id/iv_company"
        app:layout_constraintStart_toStartOf="@+id/iv_company" />

    <TextView
        android:id="@+id/iv_company_rights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="公司权益"
        android:textColor="#ffcfb690"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_company"
        app:layout_constraintStart_toStartOf="@+id/iv_company"
        app:layout_constraintTop_toTopOf="@+id/iv_company" />

    <ImageView
        android:id="@+id/iv_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:src="@drawable/pro_hexagon"
        android:translationX="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/iv_company"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_column_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:text="1个"
        android:textColor="#ffd2bb99"
        android:textSize="14sp"
        android:translationX="-30dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_column"
        app:layout_constraintEnd_toEndOf="@+id/iv_column"
        app:layout_constraintStart_toStartOf="@+id/iv_column" />

    <TextView
        android:id="@+id/tv_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="精选专栏"
        android:textColor="#ffcfb690"
        android:textSize="14sp"
        android:translationX="-30dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_column"
        app:layout_constraintStart_toStartOf="@+id/iv_column"
        app:layout_constraintTop_toTopOf="@+id/iv_column" />

    <TextView
        android:id="@+id/tv_pro_gift_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="Pro会员体验大礼包"
        android:textColor="#ffd2bb99"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationY="-2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_company" />

    <TextView
        android:id="@+id/tv_pro_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="领取后获取永久解锁机会"
        android:textColor="#ffffffff"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pro_gift_pack" />

    <TextView
        android:id="@+id/tv_pro_receive"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_pro_receive"
        android:paddingStart="52dp"
        android:paddingTop="8dp"
        android:paddingEnd="52dp"
        android:paddingBottom="8dp"
        android:text="立刻领取"
        android:textColor="#27282D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pro_remind" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:src="@drawable/pro_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pro_receive" />

</androidx.constraintlayout.widget.ConstraintLayout>